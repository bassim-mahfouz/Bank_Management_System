@page
@model DetailsModel
@{
  ViewData["Title"] = "Home page";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
<style>
    body {
        background-color: #201E20;
    }
    
    a:hover {
        color: #DDC3A5;
        text-decoration: none;
    }
    .coloring {
        color: #DDC3A5;
    }
    .c {
        color: #DDC3A5;
        background-color: #201E20;
        border-radius: 5px;
        height: 40px;
        border: 2px solid #DDC3A5;
    }

    .c:hover {
        color: black;
        background-color: #DDC3A5;
        border-radius: 5px;
        height: 40px;
        border: 2px solid black;
    }

    .deposite {
        color: blue;
        background-color: #201E20;
        border-radius: 5px;
        height: 40px;
        border: 2px solid blue;
    }

    .deposite:hover {
        box-shadow: 0 4px 2px -2px blue;
    }


    .withdraw {
        color: red;
        background-color: #201E20;
        border-radius: 5px;
        height: 40px;
        border: 2px solid red;
        margin-left: 10px;
    }

    .withdraw:hover {
        box-shadow: 0 4px 2px -2px red;
    }

       .both {
        color: white;
        background-color: #201E20;
        border-radius: 5px;
        height: 40px;
        border: 2px solid white;
        margin-left: 10px;
    }

    .both:hover {
        box-shadow: 0 4px 2px -2px white;
    }


    

    .a {
        margin-left: 20px;
        color: red;
        background-color: #201E20;
        border-radius: 5px;
        height: 40px;
        border: 2px solid red;
        padding: 5px;

    }

    .a:hover {

        color: black;
        background-color: red;
        border-radius: 5px;
        height: 40px;
        border: 2px solid black;
    }
        .active {
        color: white;
        border-bottom: 2px white solid;
    }

    .active:hover {
        color: white;
        border-bottom: 2px white solid;
        text-decoration: none;

    }
    
    th{
        background-color:  #DDC3A5;
        color: black;

    }
    td{
        background-color: #201E20;
        color: #DDC3A5;
        border-bottom: 2px solid #DDC3A5;

    }
    table{
        border-left:2px  #DDC3A5 solid ;
        border-right:2px  #DDC3A5 solid ;
        border-radius: 12px 12px 0 0 ;
    }
    .download{
        transform: translateY(-40px);
    }
    .tableTr{
        transform: translateY(-30px);
    }

</style>

<a href="../AdminIndex" class="c btn" style="margin-left: 1100px;">Home</a>

<br>

<h3 style="color: #DDC3A5;">
  Account transactions
</h3>
<br>
<a href="./Details?id=@Model.id&show=1" class="deposite btn" > <i class="bi bi-graph-up-arrow" style="color: blue;"></i></a>
<a href="./Details?id=@Model.id&show=0" class="withdraw btn" > <i class="bi bi-graph-down-arrow" style="color :red;"></i></a>
<a href="./Details?id=@Model.id&show=2" class="both btn" > <i class="bi bi-arrow-down-up" style="color :white;"></i></a>
<a  asp-page="./Details" asp-page-handler="Download" asp-route-id="@Model.id" asp-route-show="@Model.show" class="c btn download" style="margin-left: 1000px;" >Download</a>
<br>
<br>
<div style="width: 1000px;">
<table class="table tableTr" >
    <thead>
        <tr>
            <th>
                    Id 
            </th>
            <th>
                    Transaction Date
            </th>
            <th>
                    Amount
            </th>
            <th>
                    Type
            </th>     

        </tr>
    </thead>
    <tbody>
        @for(int i=@Model.Transactions.Count-1;i>=0;i--)
        {
            var item=@Model.Transactions[i];
            <tr>
                <td>
                    @item.id
                </td>
                <td>
                    @item.Date                
                </td>
                <td >
                    @item.amount   
                </td>
                <td >
                    @if(@item.type==1)
                    {
                        <i class="bi bi-graph-up-arrow" style="color: blue;"></i>
                    }
                    else{
                        <i class="bi bi-graph-down-arrow" style="color :red;"></i>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>      


</div>

